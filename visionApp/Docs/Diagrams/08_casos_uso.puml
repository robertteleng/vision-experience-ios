@startuml Casos de Uso
!theme plain
skinparam backgroundColor #FFFFFF
skinparam shadowing false

title Diagrama de Casos de Uso - VisionApp

left to right direction

actor "Usuario" as User
actor "Usuario con\nDiscapacidad Visual" as AccessUser
actor "Profesional\nde la Salud" as Medical

rectangle "VisionApp Sistema" {
  
  usecase "Visualizar con\nFiltros de Enfermedades" as UC1
  usecase "Cambiar entre\nModo Normal y VR" as UC2
  usecase "Ajustar Intensidad\nde Filtros" as UC3
  usecase "Usar Comandos\nde Voz" as UC4
  usecase "Navegar entre\nEnfermedades" as UC5
  usecase "Ver Información\nde Enfermedad" as UC6
  usecase "Experimentar\nEmpatía Visual" as UC7
  usecase "Demostrar Efectos\na Pacientes" as UC8
  usecase "Activar/Desactivar\nFiltros" as UC9
  usecase "Ajustar Contraste\ny Brillo" as UC10
  usecase "Modo Cardboard\nInmersivo" as UC11
  
  User --> UC1
  User --> UC2
  User --> UC3
  User --> UC4
  User --> UC5
  User --> UC6
  
  AccessUser --> UC4
  AccessUser --> UC1
  
  Medical --> UC7
  Medical --> UC8
  Medical --> UC6
  
  UC1 ..> UC9 : <<include>>
  UC1 ..> UC3 : <<include>>
  UC4 ..> UC5 : <<extend>>
  UC4 ..> UC9 : <<extend>>
  UC3 ..> UC10 : <<include>>
  UC2 ..> UC11 : <<include>>
  UC5 ..> UC6 : <<include>>
  UC7 ..> UC1 : <<include>>
  UC8 ..> UC1 : <<include>>
}

note right of UC4
  Control por voz especialmente
  útil para usuarios con
  discapacidad visual
end note

note bottom of UC7
  Ayuda a profesionales y
  familiares a entender las
  dificultades visuales
end note

note right of UC11
  Experiencia inmersiva con
  Google Cardboard para mayor
  impacto educativo
end note

@enduml
